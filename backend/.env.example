# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/blue_video_db"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# S3/R2 Storage Configuration (Cloudflare R2)
S3_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=your-r2-access-key-id
S3_SECRET_ACCESS_KEY=your-r2-secret-access-key
S3_REGION=auto
S3_BUCKET_NAME=your-bucket-name
CDN_URL=https://your-custom-domain.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Frontend URL (for email links and CORS)
FRONTEND_URL=https://your-app.com

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=https://your-app.com,https://www.your-app.com

# WebSocket Configuration
SOCKET_CORS_ORIGIN=https://your-app.com,https://www.your-app.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=104857600
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/quicktime
MAX_VIDEO_DURATION=300

# Redis Configuration (Optional - for caching)
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Payment Gateway Configuration (Optional)
PAYMENT_GATEWAY_URL=https://payment-gateway.example.com
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-api-key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
SESSION_SECRET=your-session-secret-change-this
BCRYPT_ROUNDS=10

# Feature Flags
ENABLE_VIDEO_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Third-party API Keys (Optional)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# Monitoring (Optional)
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

